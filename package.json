{
  "name": "progy-monorepo",
  "private": true,
  "packageManager": "bun@1.2.0",
  "scripts": {
    "dev:cli": "bun run --cwd apps/cli dev",
    "dev:editor": "bun run --cwd apps/studio dev",
    "build": "bun scripts/build.ts",
    "test": "bun test",
    "typecheck": "bun tsc --noEmit",
    "cleanup": "bun scripts/cleanup.ts",
    "deploy:backend": "bun run --cwd apps/backend deploy",
    "build:web": "bun run --cwd apps/web build:cf",
    "deploy:web": "bun run --cwd apps/web deploy",
    "pkg:major": "bun pm --cwd apps/cli version major --force",
    "pkg:minor": "bun pm --cwd apps/cli version minor --force",
    "pkg:patch": "bun pm --cwd apps/cli version patch --force",
    "pkg:publish": "bun publish --cwd apps/cli",
    "db:clean": "wrangler d1 execute progy --file=scripts/clean-db.sql",
    "db:gen": "bun run --cwd apps/backend db:gen",
    "db:up": "bun run --cwd apps/backend db:up:local",
    "db:deploy": "bun run --cwd apps/backend db:up:remote",
    "db:studio": "bun run --cwd apps/backend db:studio",
    "link:cli": "--cwd apps/cli bun link",
    "link:editor": " --cwd apps/studio bun link",
    "check-types": "tsc --noEmit",
    "test:coverage": "bun test --cwd apps/cli && bun test --cwd apps/studio && bun test --cwd packages/core"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "courses/*"
  ],
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "turbo": "^2.8.7"
  }
}
