{
  "name": "progy-monorepo",
  "private": true,
  "scripts": {
    "dev": "bun --cwd apps/web dev",
    "build": "bun scripts/build.ts",
    "cleanup": "bun scripts/cleanup.ts",
    "deploy:backend": "bun run --cwd apps/backend deploy",
    "build:web": "bun run --cwd apps/web build:cf",
    "deploy:web": "bun run --cwd apps/web deploy",
    "pkg:major": "bun pm --cwd apps/progy version major --force",
    "pkg:minor": "bun pm --cwd apps/progy version minor --force",
    "pkg:patch": "bun pm --cwd apps/progy version patch --force",
    "pkg:publish": "bun publish --cwd apps/progy",
    "db:clean": "wrangler d1 execute progy --remote --file=scripts/clean-db.sql"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@types/bun": "latest"
  }

}
